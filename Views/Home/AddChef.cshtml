@model Chef

@{
    ViewData["Title"] = "Add a Chef";
}

<partial name="_Navbar"/>

<form asp-action="CreateChef" asp-controller="Home" class="row">
    <div class="col-auto m-4">
        <div class="row">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="row">
            <label asp-for="FirstName" class="row form-label fs-5"></label>
        </div>
        <div class="row mb-4">
            <input asp-for="FirstName" class="form-control ">  
        </div>
        <div class="row">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="row">
            <label asp-for="LastName" class="row form-label fs-5"></label>
        </div>
        <div class="row mb-4">
            <input asp-for="LastName" class="form-control ">  
        </div>
    </div>
    <div class="col-auto m-4">
        <div class="row">
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>
        <div class="row">
            <label asp-for="DateOfBirth" class="row form-label fs-5"></label>
        </div>
        <div class="row mb-4">
            <input asp-for="DateOfBirth" class="form-control ">  
        </div>
        <div class="row">
            <button class="btn border border-dark col-auto">Add Chef</button>
        </div>
    </div>
</form>
