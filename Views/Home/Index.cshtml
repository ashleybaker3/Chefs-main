@model List<Chef>;

@{
    ViewData["Title"] = "Chefs";
}

<span>
    <partial name="_Navbar"/>
    <a asp-controller="Home" asp-action="AddChef">Add a Chef</a>
</span>

<div class="text-start">
    <h3 class="row border-bottom border-dark">Check out our roster of Chefs!</h3>
    <table class="table table-striped border border-dark">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Age</th>
                <th scope="col"># of Dishes</th>
            </tr>
            @foreach (Chef c in Model)
            {
                <tr>
                    <td>@c.FullName()</td>
                    <td>@c.CalculateAge()</td>
                    <td>@c.CreatedDishes.Count</td>
                </tr>
            }
        </thead>
    </table>
</div>
